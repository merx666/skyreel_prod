APP_NAME=SkyReel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=pl
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
# Default log stack uses daily rotation and stderr for containerized environments
LOG_STACK=sentry,daily,stderr
LOG_DAILY_DAYS=30
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=skyreel
DB_USERNAME=root
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_CONNECTION=mysql

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=
DB_CACHE_CONNECTION=mysql
DB_CACHE_LOCK_CONNECTION=mysql
DB_CACHE_TABLE=cache
DB_CACHE_LOCK_TABLE=cache_locks

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="skyreel.art@gmail.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# Stripe Configuration
STRIPE_KEY=pk_test_
STRIPE_SECRET=sk_test_
STRIPE_WEBHOOK_SECRET=whsec_

# Cashier Configuration
CASHIER_CURRENCY=pln
CASHIER_CURRENCY_LOCALE=pl_PL
CASHIER_LOGGER=stack

# Sentry monitoring (optional)
# Set your DSN to enable Sentry error tracking
SENTRY_DSN=
# Or use the Laravel-specific variable
# SENTRY_LARAVEL_DSN=
# Enable performance traces in production environments (0.0 - 1.0)
# SENTRY_TRACES_SAMPLE_RATE=0.2
# Enable profiling (0.0 - 1.0)
# SENTRY_PROFILES_SAMPLE_RATE=0.0
# Sentry environment (defaults to APP_ENV if unset)
SENTRY_ENVIRONMENT=${APP_ENV}
# Capture Laravel log messages to Sentry (optional)
# SENTRY_ENABLE_LOGS=false
